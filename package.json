{
  "name": "project-mark",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:integration": "docker compose -f docker-compose.integration.yml up -d && jest --config jest.integration.config.js --testPathPattern=__tests__/integration && docker compose -f docker-compose.integration.yml down",
    "start": "tsx watch src/index.ts",
    "lint": "npx eslint ./src/**",
    "lint:fix": "npx eslint ./src/** --fix",
    "migrate": "knex migrate:latest --knexfile knexfile.ts",
    "migrate:rollback": "knex migrate:rollback --knexfile knexfile.ts",
    "seed": "knex seed:run --knexfile knexfile.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.6",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.26.1"
  },
  "dependencies": {
    "@types/express": "^5.0.0",
    "express": "^4.21.2",
    "knex": "^3.1.0",
    "sqlite3": "^5.1.7"
  }
}